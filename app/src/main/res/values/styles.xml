<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="splashScreenTittle">
        <item name="android:textSize">@dimen/app_name_apresentacao</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="genericTittle">
        <item name="android:textSize">@dimen/titulo_tamanho</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="textViewLayoutDefault">
        <item name="android:textSize">@dimen/titulo_tamanho</item>
        <item name="android:textColor">@color/secondary_color_dark</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="textInputLayoutDefault" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/secondary_color_dark</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>

    </style>
    <style name="textInputEditTextDefault" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/secondary_color_dark</item>
        <item name="android:textColor">@color/secondary_color</item>
    </style>

    <style name="floatButtonMain">
        <item name="rippleColor">@color/primary_color_dark</item>
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/purple_700</item>
        <item name="android:layout_marginEnd">@dimen/margem_pequena</item>
        <item name="android:layout_marginBottom">@dimen/margem_pequena</item>
        <item name="android:elevation">@dimen/margem_pequena</item>
    </style>
    <style name="floatButtonSubMenu">
        <item name="rippleColor">@color/primary_color_dark</item>
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:layout_marginBottom">@dimen/margem_pequena</item>
        <item name="fabSize">mini</item>
        <item name="android:elevation">@dimen/margem_pequena</item>
    </style>
    <style name="floatButtonSubMenuText">
        <item name="android:textSize">@dimen/titulo_tamanho</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:elevation">@dimen/margem_pequena</item>
        <item name="android:padding">@dimen/margem_pequena</item>
        <item name="android:background">@drawable/fab_text_bg</item>
    </style>

    <!-- Top Alert view styles -->
    <style name="TopAlertWindowSlide" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_down_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_up_of_top</item>
    </style>

    <style name="TopAlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TopAlertMessage">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:maxLines">10</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="TopAlertTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="TopAlertSeparator">
        <item name="android:background">@color/light_gray</item>
    </style>

</resources>