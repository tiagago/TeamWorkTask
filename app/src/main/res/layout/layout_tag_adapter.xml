<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tag_lista_cl"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margem_pequena">


    <ImageView
        android:id="@+id/tag_lista_bg_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_tag_color_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/primary_color_light" />

    <ImageView
        android:id="@+id/tag_lista_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_tag_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/secondary_color_dark" />

    <TextView
        android:id="@+id/tag_lista_nome_tv"
        style="@style/textViewLayoutDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margem_pequena"
        android:lineBreakStyle="normal"
        app:layout_constraintStart_toEndOf="@id/tag_lista_iv"
        app:layout_constraintBottom_toBottomOf="@id/tag_lista_iv"
        app:layout_constraintTop_toTopOf="@id/tag_lista_iv"
        tools:text="Teste nome Projeto" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/secondary_color"
        android:layout_marginTop="@dimen/margem_pequena"
        app:layout_constraintStart_toStartOf="@id/tag_lista_iv"
        app:layout_constraintTop_toBottomOf="@id/tag_lista_iv"/>
</androidx.constraintlayout.widget.ConstraintLayout>