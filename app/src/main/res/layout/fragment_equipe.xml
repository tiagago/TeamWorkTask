<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/equipe_logo_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_equipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/genericTittle"
        android:text="@string/equipe_title"
        android:layout_marginStart="@dimen/margem_padrao"
        app:layout_constraintStart_toEndOf="@id/equipe_logo_iv"
        app:layout_constraintTop_toTopOf="@id/equipe_logo_iv"
        app:layout_constraintBottom_toBottomOf="@id/equipe_logo_iv"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/equipe_main_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        style="@style/floatButtonMain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/equipe_email_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="gone"
        style="@style/floatButtonSubMenu"
        app:srcCompat="@drawable/ic_email"
        app:layout_constraintBottom_toTopOf="@id/equipe_main_fab"
        app:layout_constraintStart_toStartOf="@id/equipe_main_fab"
        app:layout_constraintEnd_toEndOf="@id/equipe_main_fab"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/equipe_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/floatButtonSubMenuText"
        android:text="@string/equipe_fab_enviar_email"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/equipe_email_fab"
        app:layout_constraintTop_toTopOf="@id/equipe_email_fab"
        app:layout_constraintBottom_toBottomOf="@id/equipe_email_fab"
        tools:visibility="visible"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/equipe_compartilhar_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="gone"
        style="@style/floatButtonSubMenu"
        app:srcCompat="@drawable/ic_share"
        app:layout_constraintBottom_toTopOf="@id/equipe_email_fab"
        app:layout_constraintStart_toStartOf="@id/equipe_main_fab"
        app:layout_constraintEnd_toEndOf="@id/equipe_main_fab"
        tools:visibility="visible"
        />
    <TextView
        android:id="@+id/equipe_compartilhar_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/floatButtonSubMenuText"
        android:text="@string/equipe_fab_compartilhar"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/equipe_compartilhar_fab"
        app:layout_constraintTop_toTopOf="@id/equipe_compartilhar_fab"
        app:layout_constraintBottom_toBottomOf="@id/equipe_compartilhar_fab"
        tools:visibility="visible"
        />
    
</androidx.constraintlayout.widget.ConstraintLayout>