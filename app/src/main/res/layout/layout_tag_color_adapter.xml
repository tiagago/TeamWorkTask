<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/tag_lista_bg_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_tag_color_bg"
        android:layout_marginStart="@dimen/margem_padrao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/primary_color_light" />

    <ImageView
        android:id="@+id/tag_lista_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_tag_color"
        android:layout_marginStart="@dimen/margem_padrao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/secondary_color_dark" />

    <TextView
        android:id="@+id/tag_cor_nome_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_color_dark"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="@dimen/margem_padrao"
        app:layout_constraintStart_toEndOf="@id/tag_lista_bg_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Teste"
        />

</androidx.constraintlayout.widget.ConstraintLayout>