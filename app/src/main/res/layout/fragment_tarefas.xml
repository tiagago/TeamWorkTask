<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/tarefa_logo_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_tarefas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/genericTittle"
        android:text="@string/tarefas_title"
        android:layout_marginStart="@dimen/margem_padrao"
        app:layout_constraintStart_toEndOf="@id/tarefa_logo_iv"
        app:layout_constraintTop_toTopOf="@id/tarefa_logo_iv"
        app:layout_constraintBottom_toBottomOf="@id/tarefa_logo_iv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>